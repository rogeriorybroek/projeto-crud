<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs')  %> 
<body>
    
    <h1><%= title  %> </h1>

    <%- include('partials/navbar.ejs')  %> 

    <% if (typeof message !== 'undefined'){ %>
        <h3> <%= message  %> </h3>
    <% } %> 

    <form action="/edit/<%= user._id %> " method="POST">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" name="age" placeholder="digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label>E-mail</label>
            <input type="text" name="email" placeholder="digite o seu e-mail" value="<%= user.email %>">
        </div>
        <button type="submit">Editar</button>
    </form>


    <%- include('partials/foot.ejs')  %> 
</body>
</html>